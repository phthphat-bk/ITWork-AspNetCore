@model System.Data.DataTable
@using System.Data;
@using ITwork.Models;
@{
    ViewData["Title"] = "Job";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>List job</h1>
@foreach (DataRow item in Model.Rows)
{
    <div class="media">
        <div class="media-left">
            <a href="#">
                <img class="media-object" src="..." alt="...">
            </a>
        </div>
        <div class="media-body">
            <h4 class="media-heading"><a href=@Url.Action("detailJob", "Job", new { idJob = item[0] })>@item[6] - @item[14]</a></h4>
            @item[11]
        </div>
    </div>
}