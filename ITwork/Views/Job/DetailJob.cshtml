                    @*<img src="images/banner3.jpg" alt=" " class="img-responsive" />*@
                    
                    <p><span class="m_2">Description: </span>@Model._decription</p>
                    <p><span class="m_2">Company:</span> @Model._company</p>
                    <p><span class="m_2">Salary:</span> @Model._salary$</p>
                </div>
            </div>
            <div class="col-md-4 job_info_right">
                <div class="widget_search">
                    <h5 class="widget-title">Search</h5>
                    <form asp-action="Search" asp-controller="Home">
                        <div class="widget-content">
                            <span>I'm looking for a ...</span>
                            <input type="text" class="form-control jb_2" name="jobName" placeholder="Job Name">
                            <input type="text" class="form-control jb_2" name="company" placeholder="Company">
                            <input type="text" class="form-control jb_2" name="location" placeholder="Location">
                            <input type="submit" value="Find Jobs">
                        </div>
                    </form>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
