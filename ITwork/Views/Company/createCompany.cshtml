
@{
    ViewData["Title"] = "createCompany";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Company</h2>
<form asp-controller="company" asp-action="createCompanyResult">
    <input name="name" placeholder="Company's name" />
    <input name="managerUsername" placeholder="Manager's name" />
    <input name="numEmployee" placeholder="Number of Employees" />
    <input name="nation" placeholder="Nation" />
    <input name="email" placeholder="Email" />
    <input name="phoneNumber" placeholder="Phone" />
    <input type="submit" value="Create" />
</form>